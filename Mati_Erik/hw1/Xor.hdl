/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    //// Replace this comment with your code.
    Not(in= a, out= NotA);
    Not(in= b, out= NotB);
    And(a= a, b= NotB, out= i1);
    And(a= NotA, b= b, out= i2);
    Or(a= i1, b= i2, out= out);
}