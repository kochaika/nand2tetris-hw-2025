{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "./bin",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }